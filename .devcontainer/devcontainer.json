{
    "name": "ReusableBicep",
    "settings": { 
        "terminal.integrated.defaultProfile.linux": "PowerShell",
        "terminal.integrated.profiles.linux": {
            "PowerShell": {
                "path": "pwsh"
            }
        }
    },
    "extensions": [
        "ms-python.python",
        "github.copilot",
        "github.copilot-chat",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-bicep"
    ],
    "forwardPorts": [
        3000
    ],
    "postCreateCommand": "echo 'Container started'",
    "features": {
        "ghcr.io/devcontainers/features/powershell:1": {}
    }
}